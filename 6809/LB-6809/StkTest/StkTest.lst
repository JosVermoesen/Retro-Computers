                      ; ramTest.asm
                      ; Assembled with asm6809
                      ; Land Boards, LLC
                      ; Test RAM using LB-6809-01 on LB-MEM-02 card
                      ; Takes about 2 secs
                      
0000                  RAMSTART        EQU $0000
0007                  RAMEND          EQU $0007
8000                  RAMENDPL1       EQU $8000
8000                  ACIABASE        EQU $8000
F000                  LEDADR          EQU $F000
0000                  LED_OFF         EQU $00
0001                  LED_ON          EQU $01
                      
C000                                  ORG $C000
                      ; SET LED = LOW
C000  8601            RESVEC  LDA     #LED_ON
C002  B7F000                          STA     LEDADR
C005  CE7F00                          LDU     #$7F00  ; SET USER STACK POINTER
C008  10CE7E00                        LDS     #$7E00  ; SET HARDWARE STACK POINTER
C00C  8655                            LDA #$55
C00E  C6AA                            LDB #$AA
C010  8D07                            BSR     STUFF
C012  8600                            LDA     #LED_OFF
C014  B7F000                          STA     LEDADR
C017                  LOOP4EVR
C017  20FE                            BRA     LOOP4EVR
                      
C019                  STUFF
C019  3602                            PSHU    A
C01B  8601                            LDA #$01
C01D  C602                            LDB #$02
C01F  3702                            PULU    A
C021  39                              RTS
                                      
                      ; Reset vector
FFFE                                  ORG     $FFFE
FFFE  C000            LBFFE   FDB     RESVEC  ; RESET 

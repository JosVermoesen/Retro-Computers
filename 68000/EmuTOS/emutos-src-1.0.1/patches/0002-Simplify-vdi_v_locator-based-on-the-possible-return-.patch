From: Christian Zietz <czietz@gmx.net>
Date: Thu, 19 Oct 2017 06:59:16 +0100
Subject: [PATCH 2/2] Simplify vdi_v_locator based on the possible return
 values of gloc_key()

---
 vdi/vdi_mouse.c | 25 -------------------------
 1 file changed, 25 deletions(-)

diff --git a/vdi/vdi_mouse.c b/vdi/vdi_mouse.c
index 933bc5e..6cb5d83 100644
--- a/vdi/vdi_mouse.c
+++ b/vdi/vdi_mouse.c
@@ -196,12 +196,6 @@ void vdi_v_locator(Vwk * vwk)
         dis_cur();
         /* loop till some event */
         while ((i = gloc_key()) != 1) {
-            if (i == 4) {       /* keyboard cursor? */
-                hide_cur();     /* turn cursor off */
-                GCURX = point->x;
-                GCURY = point->y;
-                dis_cur();      /* turn cursor on */
-            }
         }
         *(INTOUT) = TERM_CH & 0x00ff;
 
@@ -227,25 +221,6 @@ void vdi_v_locator(Vwk * vwk)
             PTSOUT[0] = point->x;
             PTSOUT[1] = point->y;
             break;
-
-        case 3:
-            CONTRL[2] = 1;
-            PTSOUT[0] = point->x;
-            PTSOUT[1] = point->y;
-            break;
-
-        case 4:
-            CONTRL[2] = 1;
-            if (HIDE_CNT == 0) {
-                hide_cur();
-                PTSOUT[0] = GCURX = point->x;
-                PTSOUT[1] = GCURY = point->y;
-                dis_cur();
-            } else {
-                PTSOUT[0] = GCURX = point->x;
-                PTSOUT[1] = GCURY = point->y;
-            }
-            break;
         }
     }
 }

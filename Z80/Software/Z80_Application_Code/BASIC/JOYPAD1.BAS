10 REM JOYPAD FUNCTIONS
20 REM SET UP THE PIO PINS AS INPUTS
30 OUT 34,79
40 OUT 35,79
50 GOTO 1000
200 REM READ THE KEYPAD AND PRINT IF IT CHANGES
210 PRINT "Upper left button exits"
220 KP=0
230 NK=INP(32)
240 REM REMOVE NEXT LINE FOR REPEAT
250 IF NK=KP GOTO 220
260 REM PRINT "KEYPAD1";NK
270 IF NK AND 1 THEN GOTO 1000
280 IF NK AND 2 THEN PRINT "RIGHT"
290 IF NK AND 4 THEN PRINT "FIRE"
300 IF NK AND 8 THEN PRINT "LEFT"
310 IF NK AND 16 THEN PRINT "CENTER"
320 IF NK AND 32 THEN PRINT "DOWN"
330 IF NK AND 64 THEN PRINT "UR"
340 IF NK AND 128 THEN PRINT "UP"
350 KP=NK
350 GOTO 230

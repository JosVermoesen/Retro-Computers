10 REM JOYPAD FUNCTIONS
20 REM SET UP THE PIO PINS AS INPUTS
30 OUT 34,79
40 OUT 35,79
50 GOTO 1000
200 REM READ THE KEYPAD AND PRINT IF IT CHANGES
210 KP=0
220 NK=INP(32)
230 IF NK=KP GOTO 220
240 REM PRINT "KEYPAD1";NK
250 IF NK AND 1 THEN PRINT "UL"
260 IF NK AND 2 THEN PRINT "RIGHT"
270 IF NK AND 4 THEN PRINT "FIRE"
280 IF NK AND 8 THEN PRINT "LEFT"
290 IF NK AND 16 THEN PRINT "CENTER"
300 IF NK AND 32 THEN PRINT "DOWN"
310 IF NK AND 64 THEN PRINT "UR"
320 IF NK AND 128 THEN PRINT "UP"
330 KP=NK
340 GOTO 220
